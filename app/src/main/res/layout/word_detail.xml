<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_bg_h"
        android:gravity="bottom"
        android:textSize="@dimen/title_text_size"
        android:paddingBottom="@dimen/title_bottom_margin"
        android:background="@color/light_brown"
        android:textColor="@color/white"
        android:paddingLeft="@dimen/comp_side_margin"
        android:paddingRight="@dimen/comp_side_margin"/>
    <TextView 
        android:id="@+id/word_detail"
        android:textSize="@dimen/detail_text_size"
        android:textColor="@color/dark_brown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/detail_top_margin"
        android:paddingLeft="@dimen/comp_side_margin"
        android:paddingRight="@dimen/comp_side_margin" />

</LinearLayout>